<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxHeight="800.0" prefHeight="800.0" prefWidth="250.0" style="-fx-background: rgba(51, 51, 51, 0.9);                     -fx-background-color: rgba(51, 51, 51, 0.9);" styleClass="scrollBar" vbarPolicy="AS_NEEDED" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.SidePanelController">
   <content>
      <VBox spacing="5.0" style="-fx-padding: 10;">
         <children>
            <!-- Sezione Ant Stats (spostata da simulation.fxml) -->
            <Label alignment="CENTER" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 14px;" text="Ant Stats" />
            <Separator />
            
            <Label alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 10px;" text="Serial Number:" />
            <Label fx:id="serialNumberLabel" alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 10px;" text="0" />
            
            <Label alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 10px;" text="Start Time:" />
            <Label fx:id="startTimeLabel" alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 10px;" text="0" />
            
            <Label alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 10px;" text="Last Food DT:" />
            <Label fx:id="LFDTLabel" alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 10px;" text="0" />
            
            <Label alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 10px;" text="Last Nest DT:" />
            <Label fx:id="LNDTLabel" alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 10px;" text="0" />
            
            <Label alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 10px;" text="Last Trip Time:" />
            <Label fx:id="LTTLabel" alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 10px;" text="0" />
            
            <Label alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 10px;" text="Mean Trip Time:" />
            <Label fx:id="MTTLabel" alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 10px;" text="0" />
            
            <!-- Pulsanti navigazione -->
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="prevAntButton" onAction="#selectPreviousAnt" prefHeight="25.0" prefWidth="90.0" style="-fx-font-size: 11px; -fx-background-color: #607D8B; -fx-text-fill: white;" text="◀ Prev" />
                  <Button fx:id="nextAntButton" onAction="#selectNextAnt" prefHeight="25.0" prefWidth="90.0" style="-fx-font-size: 11px; -fx-background-color: #607D8B; -fx-text-fill: white;" text="Next ▶" />
               </children>
            </HBox>
            
            <Separator />
            
            <!-- Sezione Real-time Parameters -->
            <Label alignment="CENTER" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 14px;" text="Real-time Parameters" />
            <Separator />
            
            <!-- Pheromone Parameters -->
            <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 12px;" text="Pheromone" />
            
            <Label style="-fx-text-fill: white; -fx-font-size: 10px;" text="Evaporation Rate:" />
            <Slider fx:id="evaporationRateSlider" />
            <Label fx:id="evaporationRateValue" alignment="CENTER_RIGHT" style="-fx-text-fill: white; -fx-font-size: 10px;" />
            
            <Label style="-fx-text-fill: white; -fx-font-size: 10px;" text="Max Intensity:" />
            <Slider fx:id="maxIntensitySlider" />
            <Label fx:id="maxIntensityValue" alignment="CENTER_RIGHT" style="-fx-text-fill: white; -fx-font-size: 10px;" />
            
            <Label style="-fx-text-fill: white; -fx-font-size: 10px;" text="Min Intensity:" />
            <Slider fx:id="minIntensitySlider" />
            <Label fx:id="minIntensityValue" alignment="CENTER_RIGHT" style="-fx-text-fill: white; -fx-font-size: 10px;" />
            
            <Label style="-fx-text-fill: white; -fx-font-size: 10px;" text="Initial Intensity:" />
            <Slider fx:id="initialIntensitySlider" />
            <Label fx:id="initialIntensityValue" alignment="CENTER_RIGHT" style="-fx-text-fill: white; -fx-font-size: 10px;" />
            
            <Label style="-fx-text-fill: white; -fx-font-size: 10px;" text="Max Trail Length:" />
            <Slider fx:id="maxTrailLengthSlider" />
            <Label fx:id="maxTrailLengthValue" alignment="CENTER_RIGHT" style="-fx-text-fill: white; -fx-font-size: 10px;" />
            
            <Separator />
            
            <!-- Ant Parameters -->
            <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 12px;" text="Ant Behavior" />
            
            <Label style="-fx-text-fill: white; -fx-font-size: 10px;" text="Sight Radius:" />
            <Slider fx:id="antSightRadiusSlider" />
            <Label fx:id="antSightRadiusValue" alignment="CENTER_RIGHT" style="-fx-text-fill: white; -fx-font-size: 10px;" />
            
            <Label style="-fx-text-fill: white; -fx-font-size: 10px;" text="Feel Radius:" />
            <Slider fx:id="antFeelRadiusSlider" />
            <Label fx:id="antFeelRadiusValue" alignment="CENTER_RIGHT" style="-fx-text-fill: white; -fx-font-size: 10px;" />

            <Label style="-fx-text-fill: white; -fx-font-size: 10px;" text="Ant Sensor Radius:" />
            <Slider fx:id="antSensorRadiusSlider" />
            <Label fx:id="antSensorRadiusValue" alignment="CENTER_RIGHT" style="-fx-text-fill: white; -fx-font-size: 10px;" />

            <Label style="-fx-text-fill: white; -fx-font-size: 10px;" text="Speed:" />
            <Slider fx:id="antSpeedSlider" />
            <Label fx:id="antSpeedValue" alignment="CENTER_RIGHT" style="-fx-text-fill: white; -fx-font-size: 10px;" />
            
            <Label style="-fx-text-fill: white; -fx-font-size: 10px;" text="Exploration Rate:" />
            <Slider fx:id="explorationRateSlider" />
            <Label fx:id="explorationRateValue" alignment="CENTER_RIGHT" style="-fx-text-fill: white; -fx-font-size: 10px;" />
            
            <Label style="-fx-text-fill: white; -fx-font-size: 10px;" text="Pheromone Sensibility:" />
            <Slider fx:id="antPheromoneSensibilitySlider" />
            <Label fx:id="antPheromoneSensibilityValue" alignment="CENTER_RIGHT" style="-fx-text-fill: white; -fx-font-size: 10px;" />

            <Separator />
            
            <!-- Density Field Parameters -->
            <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 12px;" text="Field Diffusion" />
            
            <Label style="-fx-text-fill: white; -fx-font-size: 10px;" text="Diffusion Rate:" />
            <Slider fx:id="diffusionRateSlider" />
            <Label fx:id="diffusionRateValue" alignment="CENTER_RIGHT" style="-fx-text-fill: white; -fx-font-size: 10px;" />
            
            <Separator />
            
            <!-- Reset Button -->
            <Button fx:id="resetButton" onAction="#resetToDefaults" style="-fx-background-color: #607D8B; -fx-text-fill: white;" text="Reset to Default" />
         </children>
      </VBox>
   </content>
</ScrollPane>
